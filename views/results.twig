{% extends 'layout.twig' %} {% block body %}
<div class="js-global-stats" data-global-total-answers="{{globalTotal}}" data-global-right-answers="{{globalSuccess}}"
    data-global-percentage="{{globalPercentage}}">
    <!-- data for global results-->
</div>
<div class="js-drs-stats" data-drs-total-answers="{{drsTotal}}" data-drs-right-answers="{{drsSuccess}}" data-drs-percentage="{{drsPercentage}}">
    <!-- data for drs results -->
</div>
<div class="js-graph-stats" data-graph-total-answers="{{graphTotal}}" data-graph-right-answers="{{graphSuccess}}"
    data-graph-percentage="{{graphPercentage}}">
    <!-- data for graph results -->
</div>
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Results</h1>
    </div>
</div>
<div class="container">
    <div class="card mb-4 box-shadow">
        <div class="card-header">
            <h2 class="my-0 font-weight-normal">Global</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm">
                    <h1 class="card-title pricing-card-title">{{globalTotal}}
                        <small class="text-muted">questions answered</small>
                    </h1>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>{{globalPercentage}}% of right answers</li>
                        <li>{{drsTotal}} drs questions</li>
                        <li>{{graphTotal}} graph questions</li>
                    </ul>
                </div>
                <div class="col-sm">
                    <div id="globalsuccesschart"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    <div id="globalpercentagechart"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-deck mb-3 text-center">
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h3 class="my-0 font-weight-normal">DRS</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-5">
                        <h1 class="card-title pricing-card-title">{{drsTotal}}
                            <small class="text-muted">questions answered</small>
                        </h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>{{drsPercentage}}% of right answers</li>
                        </ul>
                    </div>
                    <div class="col-sm">
                        <div id="drssuccesschart"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h3 class="my-0 font-weight-normal">Graph</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-5">
                        <h1 class="card-title pricing-card-title">{{graphTotal}}
                            <small class="text-muted">questions answered</small>
                        </h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>{{graphPercentage}}% of right answers</li>
                        </ul>
                    </div>
                    <div class="col-sm">
                        <div id="graphsuccesschart"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h2> Sentences : </h2>

    <table>
        <tr>
            <th>Code</th>
            <th>Sentence</th>
        </tr>
        {% for sentence in sentences %}
        <tr>
            <th>{{ sentence.sentence_code }}</th>
            <th>
                <a href="/results/sentence/{{sentence.sentence_code}}"> {{ sentence.sentence_string }} </a>
            </th>

        </tr>
        {% endfor %}
    </table>
</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript" src="/javascripts/drawGraphs.js"></script>{% endblock body %}